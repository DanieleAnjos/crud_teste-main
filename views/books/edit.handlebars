<h2>Editar Livro</h2>

<form action="/books/{{livro.id}}" method="POST">
    <div class="form-group">
        <label for="titulo">Título:</label>
        <input type="text" id="titulo" name="titulo" class="form-control" value="{{livro.titulo}}" required placeholder="Insira o título do livro">
    </div>

    <div class="form-group">
        <label for="autor">Autor:</label>
        <input type="text" id="autor" name="autor" class="form-control" value="{{livro.autor}}" required placeholder="Insira o autor do livro">
    </div>

    <div class="form-group">
        <label for="ano">Ano:</label>
        <input type="number" id="ano" name="ano" class="form-control" value="{{livro.ano}}" required min="1000" max="{{currentYear}}" placeholder="Insira o ano de publicação">
    </div>

    <div class="form-group">
        <label for="categoria">Categoria:</label>
        <input type="text" id="categoria" name="categoria" class="form-control" value="{{livro.categoria}}" required placeholder="Insira a categoria do livro">
    </div>

    <button type="submit" class="btn btn-custom">Atualizar Livro</button>
</form>

<!-- Link centralizado -->
<div class="text-center mt-3">
    <a href="/books" class="btn btn-secondary">Voltar à Lista de Livros</a>
</div>
